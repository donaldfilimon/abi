{
  "name": "abi-dev",
  "displayName": "ABI Development Tools",
  "description": "VS Code extension for ABI framework development with Zig",
  "version": "0.1.0",
  "publisher": "abi-project",
  "repository": {
    "type": "git",
    "url": "https://github.com/abi-project/abi"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "abi",
    "zig",
    "ai",
    "gpu",
    "framework"
  ],
  "activationEvents": [
    "workspaceContains:src/abi.zig",
    "onLanguage:zig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "abi.build",
        "title": "ABI: Build Project",
        "icon": "$(tools)"
      },
      {
        "command": "abi.test",
        "title": "ABI: Run Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "abi.testFile",
        "title": "ABI: Test Current File",
        "icon": "$(beaker)"
      },
      {
        "command": "abi.run",
        "title": "ABI: Run Application",
        "icon": "$(play)"
      },
      {
        "command": "abi.runWithArgs",
        "title": "ABI: Run with Arguments",
        "icon": "$(play-circle)"
      },
      {
        "command": "abi.format",
        "title": "ABI: Format Code",
        "icon": "$(symbol-color)"
      },
      {
        "command": "abi.listFeatures",
        "title": "ABI: List Features",
        "icon": "$(list-flat)"
      },
      {
        "command": "abi.showDocs",
        "title": "ABI: Show Documentation",
        "icon": "$(book)"
      },
      {
        "command": "abi.generateDocs",
        "title": "ABI: Generate API Docs",
        "icon": "$(file-text)"
      }
    ],
    "keybindings": [
      {
        "command": "abi.build",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorLangId == zig"
      },
      {
        "command": "abi.testFile",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorLangId == zig"
      },
      {
        "command": "abi.format",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "editorLangId == zig"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "abi.build",
          "group": "navigation",
          "when": "editorLangId == zig"
        },
        {
          "command": "abi.testFile",
          "group": "navigation",
          "when": "editorLangId == zig"
        }
      ],
      "editor/context": [
        {
          "command": "abi.testFile",
          "group": "abi@1",
          "when": "editorLangId == zig"
        },
        {
          "command": "abi.format",
          "group": "abi@2",
          "when": "editorLangId == zig"
        }
      ]
    },
    "configuration": {
      "title": "ABI Development Tools",
      "properties": {
        "abi.zigPath": {
          "type": "string",
          "default": "zig",
          "description": "Path to the Zig compiler executable"
        },
        "abi.enableGpu": {
          "type": "boolean",
          "default": true,
          "description": "Enable GPU feature flag in builds"
        },
        "abi.enableAi": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI feature flag in builds"
        },
        "abi.enableDatabase": {
          "type": "boolean",
          "default": true,
          "description": "Enable Database feature flag in builds"
        },
        "abi.gpuBackend": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "none",
            "cuda",
            "vulkan",
            "metal",
            "webgpu",
            "opengl"
          ],
          "description": "GPU backend to use for builds"
        },
        "abi.optimize": {
          "type": "string",
          "default": "Debug",
          "enum": [
            "Debug",
            "ReleaseSafe",
            "ReleaseFast",
            "ReleaseSmall"
          ],
          "description": "Optimization level for builds"
        },
        "abi.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show ABI status bar item"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "abi",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The ABI task to execute (build, test, run, format, docs)"
          },
          "file": {
            "type": "string",
            "description": "Optional file path for file-specific tasks"
          },
          "args": {
            "type": "array",
            "description": "Additional arguments to pass to the task"
          }
        }
      }
    ],
    "snippets": [
      {
        "language": "zig",
        "path": "./snippets/zig.json"
      }
    ],
    "problemMatchers": [
      {
        "name": "zig",
        "owner": "zig",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (error|warning|note): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.2"
  }
}
