{
  "name": "abi-framework",
  "displayName": "ABI Framework",
  "description": "Build, test, and AI chat integration for the ABI framework",
  "version": "0.1.0",
  "publisher": "abi-team",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Testing",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:zig",
    "workspaceContains:**/build.zig"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "abi.build",
        "title": "ABI: Build Project"
      },
      {
        "command": "abi.test",
        "title": "ABI: Run Tests"
      },
      {
        "command": "abi.testFiltered",
        "title": "ABI: Run Filtered Tests"
      },
      {
        "command": "abi.format",
        "title": "ABI: Format Code"
      },
      {
        "command": "abi.lint",
        "title": "ABI: Lint Project"
      },
      {
        "command": "abi.chat.send",
        "title": "ABI: Open AI Chat"
      },
      {
        "command": "abi.chat.clear",
        "title": "ABI: Clear Chat History"
      },
      {
        "command": "abi.gpu.refresh",
        "title": "ABI: Refresh GPU Status"
      },
      {
        "command": "abi.gpu.showDetails",
        "title": "ABI: Show GPU Details"
      },
      {
        "command": "abi.showQuickPick",
        "title": "ABI: Show Quick Actions"
      },
      {
        "command": "abi.runDiagnostics",
        "title": "ABI: Run Diagnostics"
      },
      {
        "command": "abi.clearDiagnostics",
        "title": "ABI: Clear Diagnostics"
      }
    ],
    "snippets": [
      {
        "language": "zig",
        "path": "./snippets/zig.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "abi-sidebar",
          "title": "ABI Framework",
          "icon": "media/icons/abi-logo.svg"
        }
      ]
    },
    "views": {
      "abi-sidebar": [
        {
          "id": "abi.chatView",
          "name": "AI Chat",
          "type": "webview"
        },
        {
          "id": "abi.gpuView",
          "name": "GPU Status"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "abi.chatView",
        "contents": "Start chatting with the ABI agent system.\n[Open Chat](command:abi.chat.send)"
      }
    ],
    "configuration": {
      "title": "ABI Framework",
      "properties": {
        "abi.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Path to ABI binary (auto-detected if empty)"
        },
        "abi.buildFlags": {
          "type": "array",
          "default": [],
          "description": "Default build flags (e.g., -Denable-gpu=true)"
        },
        "abi.gpu.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "GPU status refresh interval in milliseconds"
        },
        "abi.chat.model": {
          "type": "string",
          "default": "gpt-oss",
          "description": "Default AI model for chat"
        },
        "abi.chat.enableStreaming": {
          "type": "boolean",
          "default": true,
          "description": "Enable streaming responses in chat"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "abi",
        "required": [
          "command"
        ],
        "properties": {
          "command": {
            "type": "string",
            "description": "ABI command to run"
          },
          "args": {
            "type": "array",
            "description": "Command arguments"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "zig",
        "owner": "zig",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):\\s+(error|warning|note):\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js",
    "pretest": "npm run compile && tsc -p tsconfig.test.json"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.0",
    "@types/glob": "^8.0.0",
    "@vscode/test-electron": "^2.3.0",
    "glob": "^10.3.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.4.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0"
  }
}
