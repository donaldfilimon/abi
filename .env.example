# =============================================================================
# Abbey Environment Configuration
# Copy this file to .env and configure your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ABBEY_LOG_LEVEL=info          # debug, info, warn, error
ABBEY_LOG_FORMAT=json         # json, text

# -----------------------------------------------------------------------------
# AI Provider Configuration
# At least one AI provider should be configured for full functionality
# -----------------------------------------------------------------------------

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# HuggingFace (https://huggingface.co/settings/tokens)
HF_API_TOKEN=hf_your-huggingface-token-here

# Ollama (local LLM - no API key needed)
# Use with: docker-compose --profile with-ollama up -d
OLLAMA_HOST=http://ollama:11434

# -----------------------------------------------------------------------------
# Monitoring & Dashboards
# -----------------------------------------------------------------------------

# Grafana credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=abbey_grafana

# -----------------------------------------------------------------------------
# Optional Services
# -----------------------------------------------------------------------------

# Neo4j (graph database)
# Use with: docker-compose --profile with-neo4j up -d
NEO4J_AUTH=neo4j/abbey_neo4j_password

# Redis (caching)
# Use with: docker-compose --profile with-redis up -d

# -----------------------------------------------------------------------------
# Production Settings (for Kubernetes deployment)
# -----------------------------------------------------------------------------

# Container registry
CONTAINER_REGISTRY=ghcr.io/donaldfilimon/abi
IMAGE_TAG=latest

# Resource limits
MEMORY_LIMIT=1Gi
CPU_LIMIT=1000m
REPLICAS=3
