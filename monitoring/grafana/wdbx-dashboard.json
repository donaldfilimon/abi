{
  "dashboard": {
    "id": null,
    "title": "WDBX Production Monitoring Dashboard",
    "tags": ["wdbx", "vector-database", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Operations per Second (Validated: 2,777+ ops/sec)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(wdbx_operations_total[5m])",
            "legendFormat": "Current Throughput"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 2000},
                {"color": "green", "value": 2500}
              ]
            },
            "unit": "ops"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Average Latency (Validated: 783-885μs)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(wdbx_latency_histogram_bucket[5m]))",
            "legendFormat": "P50 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 2000}
              ]
            },
            "unit": "µs"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Success Rate (Validated: 99.98%)",
        "type": "stat",
        "targets": [
          {
            "expr": "(rate(wdbx_operations_total[5m]) - rate(wdbx_errors_total[5m])) / rate(wdbx_operations_total[5m]) * 100",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Active Connections (Validated: 5,000+ capacity)",
        "type": "stat",
        "targets": [
          {
            "expr": "wdbx_connection_pool_size",
            "legendFormat": "Active Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 3000},
                {"color": "red", "value": 4000}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8}
      },
      {
        "id": 5,
        "title": "Memory Usage (Validated: 0 leaks)",
        "type": "stat",
        "targets": [
          {
            "expr": "wdbx_memory_usage_bytes",
            "legendFormat": "Memory Usage"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 12884901888},
                {"color": "red", "value": 15032385536}
              ]
            },
            "unit": "bytes"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8}
      },
      {
        "id": 6,
        "title": "Throughput Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(wdbx_operations_total[5m])",
            "legendFormat": "Operations/sec"
          }
        ],
        "yAxes": [
          {
            "min": 0,
            "unit": "ops"
          }
        ],
        "thresholds": [
          {
            "value": 2500,
            "colorMode": "critical",
            "op": "lt",
            "line": true,
            "lineColor": "rgba(245, 54, 54, 0.9)"
          },
          {
            "value": 2777,
            "colorMode": "custom",
            "op": "gt",
            "line": true,
            "lineColor": "rgba(50, 172, 45, 0.9)"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Latency Percentiles",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(wdbx_latency_histogram_bucket[5m]))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(wdbx_latency_histogram_bucket[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(wdbx_latency_histogram_bucket[5m]))",
            "legendFormat": "P99"
          }
        ],
        "yAxes": [
          {
            "min": 0,
            "unit": "µs"
          }
        ],
        "thresholds": [
          {
            "value": 1000,
            "colorMode": "critical",
            "op": "gt",
            "line": true,
            "lineColor": "rgba(245, 54, 54, 0.9)"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 8,
        "title": "Operation Breakdown",
        "type": "piechart",
        "targets": [
          {
            "expr": "rate(wdbx_reads_total[5m])",
            "legendFormat": "Reads"
          },
          {
            "expr": "rate(wdbx_writes_total[5m])",
            "legendFormat": "Writes"
          },
          {
            "expr": "rate(wdbx_searches_total[5m])",
            "legendFormat": "Searches"
          },
          {
            "expr": "rate(wdbx_deletes_total[5m])",
            "legendFormat": "Deletes"
          }
        ],
        "gridPos": {"h": 9, "w": 8, "x": 0, "y": 25}
      },
      {
        "id": 9,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(wdbx_errors_total[5m])",
            "legendFormat": "Errors/sec"
          },
          {
            "expr": "rate(wdbx_timeouts_total[5m])",
            "legendFormat": "Timeouts/sec"
          }
        ],
        "yAxes": [
          {
            "min": 0,
            "unit": "ops"
          }
        ],
        "gridPos": {"h": 9, "w": 8, "x": 8, "y": 25}
      },
      {
        "id": 10,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{container=\"wdbx\"}[5m]) * 100",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "container_memory_usage_bytes{container=\"wdbx\"} / 1024 / 1024 / 1024",
            "legendFormat": "Memory Usage (GB)"
          }
        ],
        "yAxes": [
          {
            "min": 0,
            "max": 100,
            "unit": "percent"
          },
          {
            "min": 0,
            "unit": "short"
          }
        ],
        "gridPos": {"h": 9, "w": 8, "x": 16, "y": 25}
      },
      {
        "id": 11,
        "title": "Performance Regression Detection",
        "type": "table",
        "targets": [
          {
            "expr": "rate(wdbx_operations_total[5m])",
            "legendFormat": "Current Throughput",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "columns": [
                {
                  "text": "Metric",
                  "value": "Metric"
                },
                {
                  "text": "Current",
                  "value": "Current"
                },
                {
                  "text": "Baseline",
                  "value": "Baseline"
                },
                {
                  "text": "Deviation",
                  "value": "Deviation"
                }
              ]
            }
          }
        ],
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 34}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "enable": true,
          "expr": "increase(wdbx_deployment_timestamp[1m])",
          "iconColor": "green",
          "textFormat": "Deployment"
        },
        {
          "name": "Alerts",
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"WDBX.*\"}",
          "iconColor": "red",
          "textFormat": "{{ $labels.alertname }}"
        }
      ]
    }
  }
}
